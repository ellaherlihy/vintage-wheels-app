<div class="container">
<br>
<h2 class="mt-5">Log in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
    data: {turbo: false}) do |f| %>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-primary"%>
      </div>
    <div>
      <%= link_to "Not yet signed up? Sign up here", new_user_registration_path, class: "btn btn-primary mt-3"%>
    </div>
  <% end %>
